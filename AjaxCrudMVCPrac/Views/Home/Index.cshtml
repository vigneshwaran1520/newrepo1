@model AjaxCrudMVC.Models.ViewEmployeeModel
@{

}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>





<div class="container" style="background-color:#d46f6f">
    <h2 style="background-color:seagreen">Employees Record</h2>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" style="background-color:Highlight">
        Add New Employee
    </button><br /><br />
    <table class="table table-bordered table-hover" id="mytable">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Age
                </th>
                <th>
                    State
                </th>
                <th>
                    Country
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="tbody">
        </tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-body" style="background-color:aquamarine">
                <form>
                    <div class="form-group">
                        <label for="EmployeeId">ID</label>
                        <input type="text" class="form-control" id="EmployeeID" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" class="form-control" id="Name" placeholder="Name" />
                        <span id="empname" style="  position: fixed; margin-left: 289px; margin-top: -24px; "></span>
                    </div>

                    <div class="form-group">
                        <label for="Age">Age</label>
                        <input type="text" maxlength="2" class="form-control" id="Age" placeholder="Age" />
                        <span id="empage" style="  position: fixed; margin-left: 289px; margin-top: -24px; "></span>
                    </div>

                    <div class="form-group">
                        <label for="Country">Country</label>
                        <input type="text" class="form-control" id="Country" placeholder="Country" />
                        <span id="empcountry" style="  position: fixed; margin-left: 289px; margin-top: -24px; "></span>

                    </div>
                    <div class="form-group">
                        <label for="State">State</label>
                        <input type="text" class="form-control" id="State" placeholder="State" />
                        <span id="empstate" style="  position: fixed; margin-left: 289px; margin-top: -24px; "></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none; background-color:yellow" onclick="Update();">Update</button>
                <button type="button" class="btn btn-default" style="background-color:lightpink" data-dismiss="modal">Close</button>



            </div>
           
        </div>
    </div>
</div>



<script src="~/Scripts/Employee.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>

